#!/usr/bin/env node

var husk = require('..').core().fs()
  .plugin([
    require('husk-buffer'),
    require('husk-parse'),
    require('husk-filter'),
    require('husk-pluck'),
    require('husk-transform'),
    require('husk-stringify'),
  ]);

husk('package.json')
  .read()
  .buffer()
  .parse(function(){return this.body})
  .pluck(function(){return this.dependencies})
  .transform(function() {
    for(var k in this) {
      this[k] = '~2.0.0';
    }
    return this;
  })
  .debug()
  .stringify({indent: 2})
  .print()
  .run();
